# ===========================================
# REQUIRED: Core Configuration
# ===========================================

# Supabase - Database & Authentication
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application URLs
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_APP_DOMAIN=yourdomain.com

# ===========================================
# OPTIONAL: AI Features (Groq - FREE tier available)
# ===========================================

# Sign up at https://console.groq.com to get your API key
GROQ_API_KEY=your-groq-api-key

# ===========================================
# OPTIONAL: Email (Resend)
# ===========================================

# Sign up at https://resend.com to get your API key
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# OPTIONAL: Payments (Stripe)
# ===========================================

# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs for subscription plans (create in Stripe dashboard)
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_AGENCY_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxx

# ===========================================
# OPTIONAL: Security
# ===========================================

# Salt for hashing IP addresses in analytics (for privacy)
IP_HASH_SALT=your-random-salt-string
